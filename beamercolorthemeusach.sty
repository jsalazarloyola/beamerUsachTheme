% Colores b√°sicos USACH
\definecolor{usachOrange}{RGB}{234,118,0}
\definecolor{usachBlue}{RGB}{0, 47, 108}
\definecolor{usachGray}{RGB}{57,64,73}

% Colores secundarios USACH
\definecolor{usachWine}{RGB}{124,37,41}

%\colorlet{exampleGreen}{green!50!black}
\definecolor{exampleColor}{RGB}{37,74,93}

% Colores de los elementos
\setbeamercolor*{title page header}{fg=usachBlue}
\setbeamercolor*{author}{fg=usachGray}
\setbeamercolor*{institute}{fg=usachGray}
\setbeamercolor*{date}{fg=usachGray}

\setbeamercolor*{normal text}{fg=usachBlue}
\setbeamercolor*{alerted text}{fg=usachOrange}

\setbeamercolor*{titlelike}{fg=usachBlue}

\setbeamercolor*{section in toc}{fg=usachGray}
% modificar este para que sea diferente
\setbeamercolor*{section in toc shaded}{fg=usachGray!90}

\setbeamercolor*{page number in head/foot}{fg=usachGray}

\setbeamercolor*{description item}{fg=usachWine}
\setbeamercolor*{enumerate item}{fg=usachWine}
\setbeamercolor*{itemize item}{fg=usachWine}

\setbeamercolor*{footline}{fg=usachGray}

\setbeamercolor*{author in head/foot}{parent=footline}
\setbeamercolor*{title in head/foot}{parent=footline}
\setbeamercolor*{date in head/foot}{parent=footline}
\setbeamercolor*{page number in head/foot}{parent=footline}

\setbeamercolor*{section in head/foot}{parent=footline}
\setbeamercolor*{subsection in head/foot}{parent=footline}

\setbeamercolor*{block title}{fg=white, bg=usachBlue}
\setbeamercolor*{block body}{bg=usachGray!10}

\setbeamercolor*{block title alerted}{fg=white, bg=usachWine}
\setbeamercolor*{block body alerted}{fg=usachWine, bg=usachGray!10}

\setbeamercolor*{block title example}{fg=white, bg=exampleColor}
\setbeamercolor*{block body example}{fg=exampleColor, bg=usachGray!10}
